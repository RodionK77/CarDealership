<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rv_card_user"
        android:layout_width="370dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="15dp"
        android:outlineAmbientShadowColor="@color/items_color"
        android:outlineSpotShadowColor="@color/items_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/rv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Акакий Акакиевич"
                android:paddingEnd="10dp"
                android:textSize="14dp"
                android:textColor="@color/items_color">
            </TextView>

            <View
                android:layout_width="2dp"
                android:layout_height="34dp"
                android:background="@color/items_color_glass"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/rv_user_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mailbox@mail.ru"
                    android:textSize="14dp"
                    android:textColor="@color/items_color">
                </TextView>

                <TextView
                    android:id="@+id/rv_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="79157778448"
                    android:textColor="@color/items_color"
                    android:textSize="14dp">
                </TextView>

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="34dp"
                android:background="@color/items_color_glass"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/rv_user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Администратор"
                android:paddingStart="10dp"
                android:textSize="14dp"
                android:textColor="@color/items_color">
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>