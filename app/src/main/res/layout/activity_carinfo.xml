<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background_grey">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/toolbar"
        android:background="@drawable/action_bar_background"
        app:title="О модели"
        android:textAlignment="center"
        android:gravity="center"
        app:titleTextColor="@color/items_color">
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_car_info"
        android:layout_width="370dp"
        android:layout_height="195dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/card_background">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/info_card_name_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:text="Skoda Rapid II"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18dp"
                    android:textColor="@color/items_color">
                </TextView>

                <ImageView
                    android:id="@+id/iv_rv_card_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:src="@mipmap/kia_tellurida_foreground"
                    android:background="@drawable/rv_card_background"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="170dp"
                android:background="@color/items_color_glass"
                android:layout_gravity="center"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rv_card_price_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="1 214 000 ₽"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="18dp"
                    android:textColor="@color/items_color">
                </TextView>

                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/items_color_glass"
                    android:layout_gravity="center"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_card_left_top"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/initials_background"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/cv_info_review"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Посмотреть\nотзывы"
                        android:textStyle="normal"
                        android:textSize="14dp"
                        android:textColor="@color/items_color">
                    </TextView>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/iv_bookmark_info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:src="@drawable/ic_bookmark_false" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_car_info2"
            android:layout_gravity="center"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/info_card_char"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:text="Характеристики"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="16dp"
                        android:textColor="@color/items_color">
                    </TextView>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/info_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Общая информация"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/items_color">
                            </TextView>

                            <TextView
                                android:id="@+id/info_fields_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:text="Марка\nСтрана марки\nМодель\nЦвет\nКласс автомобиля\nКол-во дверей\nКол-во мест\nРасположение руля"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/text_field">
                            </TextView>

                            <TextView
                                android:id="@+id/info_engine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Двигатель"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/items_color">
                            </TextView>

                            <TextView
                                android:id="@+id/info_fields_engine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:text="Тип двигателя\nОбъём\nМощность\nКоробка передач"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/text_field">
                            </TextView>

                            <TextView
                            android:id="@+id/info_exploitation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="20dp"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:text="Эксплуатация"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="@color/items_color">
                        </TextView>

                            <TextView
                                android:id="@+id/info_fields_exploitation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:text="Ускорение\nПотребление"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/text_field">
                            </TextView>

                            <TextView
                                android:id="@+id/info_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Размеры и объём"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/items_color">
                            </TextView>

                            <TextView
                                android:id="@+id/info_fields_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingBottom="10dp"
                                android:text="Длина\nШирина\nВысота\nОбъём багажника\nОбъём топливного бака"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/text_field">
                            </TextView>

                        </LinearLayout>

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/info_main_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Общая информация"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/card_background">
                            </TextView>

                            <TextView
                                android:id="@+id/info_fields_main_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Марка\nСтрана марки\nМодель\nЦвет\nКласс автомобиля\nКол-во дверей\nКол-во мест\nРасположение руля"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/items_color">
                            </TextView>

                            <TextView
                                android:id="@+id/info_engine_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Двигатель"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/card_background">
                            </TextView>

                            <TextView
                                android:id="@+id/info_fields_engine_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Тип двигателя\nОбъём\nМощность\nКоробка передач"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/items_color">
                            </TextView>

                            <TextView
                                android:id="@+id/info_exploitation_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Эксплуатация"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/card_background">
                            </TextView>

                            <TextView
                                android:id="@+id/info_fields_exploitation_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ускорение\nПотребление"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/items_color">
                            </TextView>

                            <TextView
                                android:id="@+id/info_size_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20dp"
                                android:paddingTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Размеры и объём"
                                android:textStyle="bold"
                                android:textSize="16dp"
                                android:textColor="@color/card_background">
                            </TextView>

                            <TextView
                                android:id="@+id/info_fields_size_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:text="Длина\nШирина\nВысота\nОбъём багажника\nОбъём топливного бака"
                                android:textStyle="normal"
                                android:textSize="12dp"
                                android:textColor="@color/items_color">
                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>


