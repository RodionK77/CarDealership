<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.home.HomeFragment">

    <!--<Button
        android:id="@+id/offer_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предложение дня!\nKIA Tellurida\nОт 1 750 000 ₽"
        app:layout_constraintBottom_toTopOf="@+id/text_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableRight="@mipmap/png_kia_tellurida_foreground"/>-->

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="370dp"
        android:layout_height="204dp"
        app:cardCornerRadius="45dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="25dp"
        android:outlineAmbientShadowColor="@color/card_red_shadow"
        android:outlineSpotShadowColor="@color/card_red_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_card0"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:text="Предложение\nДНЯ!"
            android:textColor="@color/card_red"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/brand_card0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:text="KIA Telluride"
                    android:textColor="@color/items_color"
                    android:textSize="24dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/price_card0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="start"
                    android:text="от 1 750 000 ₽"
                    android:textColor="@color/items_color"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_card0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/kia_tellurida_foreground"/>

        </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="21dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="25dp"
                android:outlineAmbientShadowColor="@color/card_green_shadow"
                android:outlineSpotShadowColor="@color/card_green_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_card1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="Всё\nнипочём!"
                        android:textColor="@color/card_green"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_card1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:scaleType="center"
                        android:src="@mipmap/card1_foreground" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_marginStart="21dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/card_background"
                android:layout_marginTop="20dp"
                app:cardElevation="25dp"
                android:outlineAmbientShadowColor="@color/card_blue_shadow"
                android:outlineSpotShadowColor="@color/card_blue_shadow"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_card3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="Любимый\nпомощник"
                        android:textColor="@color/card_blue"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_card3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:scaleType="fitXY"
                        android:scaleY="2"
                        android:src="@mipmap/card3_foreground" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="25dp"
                android:outlineAmbientShadowColor="@color/card_yellow_shadow"
                android:outlineSpotShadowColor="@color/card_yellow_shadow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_card2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="Культовая\nКЛАССИКА"
                        android:textColor="@color/card_yellow"
                        android:textSize="26dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_card2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:scaleType="fitXY"
                        android:scaleY="2"
                        android:src="@mipmap/card2_foreground" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/card_background"
                android:layout_marginTop="20dp"
                app:cardElevation="25dp"
                android:outlineAmbientShadowColor="@color/card_orange_shadow"
                android:outlineSpotShadowColor="@color/card_orange_shadow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_card4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:text="Всегда\nдля души"
                        android:textColor="@color/card_orange"
                        android:textSize="28dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_card4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:scaleType="fitXY"
                        android:scaleY="2"
                        android:src="@mipmap/card4_foreground" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>